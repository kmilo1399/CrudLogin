<div class="container my-4">
    <div class="row justify-content-between align-items-center">
        <div class="col-md-8">
            <h1>Smartphone Technology</h1>
        </div>

        {{#if user}}
        <div class="col-md-4 d-flex justify-content-end">
            <input
                type="search"
                class="form-control me-2"
                placeholder="Search devices..."
                aria-label="search-devices"
                id="searchQuery"
            />
           
            <button class="btn btn-primary custom-btn">
                <a href="/logout" class="text-white text-decoration-none">Logout</a>
            </button>
        </div>
        {{else}}
        <div class="col-md-4 d-flex justify-content-end">
            <li class="nav-item list-unstyled me-3">
                <a href="signin" class="btn btn-primary">Sign In</a>

            </li>
            <li class="nav-item list-unstyled">
                <a href="signup" class="btn btn-outline-primary">Signup</a>
            </li>
        </div>
        {{/if}}      
    </div>
</div>
